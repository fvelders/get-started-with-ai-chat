# Backend configuratie voor NAS deployment
# Kopieer dit bestand naar .env en vul de waarden in

# Azure AI Project configuratie (verplicht)
AZURE_AIPROJECT_CONNECTION_STRING="eastus2.api.azureml.ms;********-****-****-****-************;my_resource_group;ai-project-**********"
AZURE_AI_CHAT_DEPLOYMENT_NAME="gpt-4o-mini"
AZURE_EXISTING_AIPROJECT_ENDPOINT="https://your-project.api.azureml.ms"

# Azure Search configuratie (optioneel - voor RAG functionaliteit)
AZURE_AI_EMBED_DEPLOYMENT_NAME="text-embedding-3-small"
AZURE_AI_EMBED_DIMENSIONS=100
AZURE_AI_SEARCH_ENDPOINT="https://your-search-service.search.windows.net"
AZURE_AI_SEARCH_INDEX_NAME="index_sample"

# CORS configuratie (verplicht voor gescheiden frontend/backend)
# Voeg het adres van je frontend toe (bijv. http://localhost:5173 voor lokaal of http://nas-ip:port)
# Gebruik komma's om meerdere origins toe te staan
CORS_ORIGINS="http://localhost:5173,http://localhost:3000,http://192.168.1.100:5173"

# Optionele configuratie
ENABLE_AZURE_MONITOR_TRACING="false"
APP_LOG_FILE=""

# Basic authenticatie (optioneel - voor extra beveiliging)
WEB_APP_USERNAME=""
WEB_APP_PASSWORD=""

# Production mode (zet op true als je draait op NAS)
RUNNING_IN_PRODUCTION="false"
